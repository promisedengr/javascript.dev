{
  "compilerOptions":{
    "sourceMap": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "lib": ["ES2020"],
    "module": "commonjs",
    "target": "ES2020"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "test/*.ts"
  ]
}
